hostname ospfd
password zebra

interface eth1
  ip ospf mtu-ignore
  ip ospf network point-to-point
  ip ospf hello-interval 5
  ip ospf dead-interval 10

interface eth2
  ip ospf mtu-ignore
  ip ospf network point-to-point
  ip ospf hello-interval 5
  ip ospf dead-interval 10

router ospf
  network 10.10.0.0/30 area 0
  network 10.20.0.0/30 area 0

log stdout
